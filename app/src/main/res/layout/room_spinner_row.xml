<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_room"
        android:layout_width="@dimen/image_spinner"
        android:layout_height="@dimen/image_spinner"
        android:layout_margin="@dimen/margin_moyen"
        android:src="@drawable/reunion" />

    <TextView
        android:id="@+id/name_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_room"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_moyen"
        android:layout_toEndOf="@id/image_room"
        android:gravity="center"
        android:textSize="@dimen/text_title"
        tools:text="Salle 1" />

</RelativeLayout>