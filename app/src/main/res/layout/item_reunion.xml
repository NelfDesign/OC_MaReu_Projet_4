<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_salle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/logo"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_reu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Reunion"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/image_salle"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/date_reunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/text_reu"
            tools:text="17/09/19"
            app:layout_constraintTop_toTopOf="@id/text_reu"
            app:layout_constraintBottom_toBottomOf="@id/text_reu"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/hour_reunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/date_reunion"
            tools:text="- 14h"
            app:layout_constraintTop_toTopOf="@id/text_reu"
            app:layout_constraintBottom_toBottomOf="@id/text_reu"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_reu"
            app:layout_constraintLeft_toLeftOf="@+id/text_reu"
            tools:text="marc@lamzone.com"/>

        <ImageButton
            android:id="@+id/icon_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_margin="10dp"
            android:background="@null"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>