<resources>

    <!-- Base application theme. -->
    <style name="MaReuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- theme creation -->
    <style name="MaReuTheme.create">
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <!-- style text title -->
    <style name="themetitle">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
    </style>

</resources>
