<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.nelfdesign.mareu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MaReuTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".UI.Fragments.CreationReunionFragment"
                    android:windowSoftInputMode="adjustResize"
                    android:theme="@style/MaReuTheme.create"/>

        <activity android:name=".UI.Activity.ReunionListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>